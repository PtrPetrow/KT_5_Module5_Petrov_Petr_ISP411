<Page x:Class="Petrov_Invent.Pages.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Petrov_Invent.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ИС по прокату спортивного инвентаря" Height="600" Width="1000" 
      MinHeight="600" MinWidth="1000">

    <Grid Background="White" >
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин" FontSize="20"></Label>
            <TextBox x:Name="login" ></TextBox>
            <Label Content="Пароль"  FontSize="20"></Label>
            <PasswordBox x:Name="password"></PasswordBox>
            <Button Content="Войти" Click="Button_Click"  FontSize="20"></Button>
        </StackPanel>
    </Grid>
</Page>
